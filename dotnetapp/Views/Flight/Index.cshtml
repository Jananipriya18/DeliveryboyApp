<div class="text-center">
    <h1 class="display-4">Flight Information</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Departure</th>
                <th>Duration</th>
                <th>Arrival</th>
                <th>Price</th>
                <th>Airline</th>
                <th>Flight Number</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)  // Null check
            {
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.Departure</td>
                        <td>@flight.Duration</td>
                        <td>@flight.Arrival</td>
                        <td>@flight.Price</td>
                        <td>@flight.Airline</td>
                        <td>@flight.FlightNumber</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No flight information available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
