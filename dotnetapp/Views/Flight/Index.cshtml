@model List<Flight>
@{
    ViewData["Title"] = "Flight Information";
}

<a asp-controller="Flight" asp-action="Create">Create a New Flight</a>

<div class="text-center">
    <h1 class="display-4">Flight Information</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Departure</th>
                <th>Duration</th>
                <th>Arrival</th>
                <th>Price</th>
                <th>Airline</th>
                <th>Flight Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.Departure</td>
                        <td>@flight.Duration</td>
                        <td>@flight.Arrival</td>
                        <td>@flight.Price</td>
                        <td>@flight.Airline</td>
                        <td>@flight.FlightNumber</td>
                        <td>
                            <a asp-controller="Flight" asp-action="Update" asp-route-id="@flight.ID">Update</a>
                            <form asp-controller="Flight" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@flight.ID" />
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">No flight information available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
